{
  "version": 2,
  "trailingSlash": false,
  "cleanUrls": true,
  "rewrites": [
    { 
      "source": "/confirmation",
      "destination": "/confirmation.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
} 